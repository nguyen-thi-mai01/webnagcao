extends layout

block content
  h2 Danh sách sản phẩm mèo
  .product-list
    if products && products.length > 0
      each product in products
        .product-item
          // Thêm hình ảnh sản phẩm - ĐÃ SỬA DỤNG INTERPOLATION
          if product.image
            img(src="#{product.image}", alt="#{product.name}", style="max-width: 200px; max-height: 200px;")
          else
            p Không có hình ảnh
          h4= product.name
          p Loài: #{product.breed}
          p Giá: #{product.price} VNĐ
          p= product.description
          a(href="/products/#{product._id}") Xem chi tiết
          form(action="/cart/add/#{product._id}", method="post")
            button(type="submit") Thêm vào giỏ hàng
    else
      p Không có sản phẩm nào.
    if error
      p.error Lỗi: #{error}